		{
			"name": "skill check",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"// Parse the JSON response\r",
							"let responseData = pm.response.json();\r",
							"\r",
							"// Check if actorName exists\r",
							"if (responseData.actorName) {\r",
							"    // Set actorName as a collection variable\r",
							"    pm.collectionVariables.set(\"favoriteActor\", responseData.actorName);\r",
							"\r",
							"    // Optional: Display confirmation in Postman console\r",
							"    console.log(\"Favorite Actor set as:\", responseData.actorName);\r",
							"} else {\r",
							"    console.warn(\"actorName not found in the response.\");\r",
							"}\r",
							""
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
